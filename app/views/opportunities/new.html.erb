<div ng-controller="OpportunityNewCtrl">

<%= form_for @opportunity, url: organisation_opportunities_path, html: {multipart: true} do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :description %>
	<%= f.text_area :description %>

	<%= f.label :image %>
	<%= f.file_field :image, required: true, data: {:"ng-file-select" => "onFileSelect($files)"}  %>

	<img ng-src="{{imageSrc}}" />

	<%= f.label :requirements %>
	<%= f.select(:requirements, options_for_select: [["Image", "images"], ["Text", "text"], ["Both Image and Text", "both images and text"]]) %>


	<%= f.submit 'Publish' %>

<% end %>

</div>