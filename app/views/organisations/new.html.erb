


<div class="new-organisation container" ng-controller="OrganisationNewCtrl">

	<div class="row">
		<div class="col-md-3"></div>
		<div class="org-form-wrapper col-md-6">
		<%= form_for @organisation, html: {multipart: true} do |f| %>

			<div class="field-wrapper col-md-12">
				<div class="file-field profile-image">
					<%= f.label :image, 'Thumbnail', class: 'organisation-thumb-label' %>
					<%= f.file_field :image, required: true, data: {:"ng-file-select" => "onFileSelect($files)"}, class: 'organisation-file-field'%>
					<img ng-show="imageSrc" ng-src="{{imageSrc}}" class="img-circle collection-preview" id="profile-pic" />
				</div>
			</div>

			<div class="row">
				<div class="col-md-12 title-field">
				<%= f.text_area :name, placeholder: 'Name' %>
				</div>
			</div>

			<div class="row">
				<div class="col-md-12 description-field">
			<%= f.text_area :description, placeholder: 'Describe your organisation' %>
				</div>
			</div>


			<div class="row">
				<div class="col-md-12">
			<%= f.text_field :network, placeholder: 'Network' %>
				</div>	
			</div>


			<div class="row">
				<div class="col-md-12 genre-field">
			<%= f.text_field :organisation_type, placeholder: 'Type of Organisation' %>
				</div>
			</div>



			<div class="row">
				<div class="col-md-12 genre-field">
			<%= f.text_field :creator_role, placeholder: 'What is your role?' %>
				</div>
			</div>


			<div class="row">
				<div class="col-md-12">
			<%= f.submit 'Submit', class: 'org-submit' %>
				</div>
			</div>

		<% end %>

		</div>
		<div class="col-md-3"></div>
	</div>
</div>