<div class="text-inputs profile-info">

	<button ng-click="editable = !editable">Toggle Edit</button>

	<div ng-repeat="attribute in attributes">

		<div class="{{attribute + '-show-edit'}} edit-field">

			<a href="#" 
			class="{{attribute}}"
			ng-show="editable"
			editable-text="user[attribute]"
			onaftersave="updateProfile(attribute, $data)">
			<p class="{{attribute}}">
				{{user[attribute] || attribute}}
			</p>
			</a>
			<p class="{{attribute}}" ng-hide="editable">
				{{user[attribute] || attribute}}
			</p>
		</div>

</div>	

</div>