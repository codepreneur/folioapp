<div class="container">
<% if @user.submissions.none? %>
	You haven't made any submissions yet
<% else %>

	<div class="row">
		<h1 class="name subs">Your Submissions</h1>
	</div>


	<% @submissions.in_groups_of(3, false) do |own_submission_triplet| %>
		<div class="row">
			<%= render own_submission_triplet %>
		</div>
	<% end %>

<% end %>


</div>